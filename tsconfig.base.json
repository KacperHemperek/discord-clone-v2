{
  "compileOnSave": false,
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@shared/*": ["./shared/*"],
      "@api/*": ["./apps/fastify-api/src/*"],
      "@web/*": ["./apps/discord-clone-v2/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
