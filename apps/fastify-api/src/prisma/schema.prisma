datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  username String
  password String
  active   Boolean @default(false)

  invited   Friendship[] @relation("invited")
  invitedBy Friendship[] @relation("invitedBy")
  chats     Chat[]
  messages  Message[]
}

model Friendship {
  id String @id @default(uuid())

  status      String    @default("pending")
  seen        Boolean   @default(false)
  requestedAt DateTime  @default(now())
  acceptedAt  DateTime?

  inviter   User   @relation("invitedBy", fields: [inviterId], references: [id])
  inviterId String
  invitee   User   @relation("invited", fields: [inviteeId], references: [id])
  inviteeId String @map("friendId")

  @@unique([inviterId, inviteeId])
}

model Chat {
  id   String @id @default(uuid())
  name String

  messages Message[]
  users    User[]
}

model Message {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  text  String?
  image String?

  senderId String
  sender   User   @relation(fields: [senderId], references: [id])
  chatId   String
  chat     Chat   @relation(fields: [chatId], references: [id])
}
